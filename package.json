{
  "name": "pair-programer",
  "displayName": "pair-programer",
  "description": "A Pair Programmer AI",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pair-programer.helloWorld",
        "title": "Hello World",
        "category": "AI Pair"
      },
      {
        "command": "aiPair.openSettings",
        "title": "Open AI Pair Settings",
        "category": "AI Pair"
      }
    ],
    "configuration": {
      "title": "AI Pair Programmer",
      "properties": {
        "aiPair.models": {
          "type": "array",
          "default": [
            {
              "id": "wca",
              "type": "watsonx",
              "label": "Watsonx Code Assistant",
              "endpoint": "",
              "apiKey": ""
            },
            {
              "id": "ollama-code",
              "type": "ollama",
              "label": "Ollama Code Model",
              "endpoint": "http://localhost:11434",
              "modelName": "codellama"
            },
            {
              "id": "ollama-general",
              "type": "ollama",
              "label": "Ollama General QA",
              "endpoint": "http://localhost:11434",
              "modelName": "llama2"
            }
          ],
          "description": "Configure available AI models"
        },
        "aiPair.taskMappings": {
          "type": "object",
          "default": {
            "codeCompletion": "wca",
            "codeReview": "ollama-code",
            "generalQA": "ollama-general"
          },
          "description": "Map tasks to model IDs"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0"
  }
}
